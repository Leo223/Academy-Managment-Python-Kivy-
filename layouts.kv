                #### Poner aqui los botones exta
                ####
                Label:
                    text: "[i][b][sup]Alumno:[/sup][/i][/b]"+" "*5+"[color=ff3333][i][b]"+root.Nm_alumno+"[/i][/b][/color]"
#                    font_size: 50
                    markup:True

        BoxLayout:
            id:_week
            size_hint_y:0.1
            orientation:'horizontal'

        GridLayout:
            orientation:'horizontal'
            id:_days
            cols:7

