<Calendario>
    week:_week
    days:_days
    editar:_editar
    crear:_crear
    GridLayout:
        cols:1
        orientation: 'vertical'
        GridLayout:
            rows:2
            orientation: 'vertical'
            size_hint_y:0.2
#            spacing:100
            Label:
                text: "[color=FF9900][i][b]"+root.mesName+"[color=FF9900][/i][/b]"+10*' '+ "[color=#3333ff]"+root.Nm_Asignatura+"[color=#3333ff]"
#                font_size:100
                markup:True
            BoxLayout:
                orientation:'horizontal'
                Button:
#                    image: 'prev.png'
                    text: '<'
                    font_size:80
                    size_hint_x: None
                    width: self.height
                    on_release: app.Switch_to_Main_screen()
                ToggleButton:
                    id:_editar
                    text:'Editar\nAsistencia'
                    font_size: 40
                    size_hint_x: 0.25
                    width: self.height
                    on_release: app.Editar_Asistencia()

                ToggleButton:
                    id:_crear
                    text:'Crear\nAsistencia'
                    font_size: 40
                    size_hint_x: 0.25
                    width: self.height
                    on_release: app.Asistencia_puntual()
